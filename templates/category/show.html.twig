{% extends 'base.html.twig' %}

{% block title %}{{ 'Category' |trans}}{% endblock %}

{% block body %}
    <h1>{{ 'Category' |trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Name' |trans}}</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_category_index') }}">{{ 'back to list' |trans}}</a>

    <a class="btn btn-secondary" href="{{ path('app_category_edit', {'id': category.id}) }}">{{ 'edit' |trans}}</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
