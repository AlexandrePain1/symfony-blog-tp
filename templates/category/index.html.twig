{% extends 'base.html.twig' %}

{% block title %}{{ 'Category index' |trans}}{% endblock %}

{% block body %}
    <h1>{{ 'Category Index' |trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'Name' |trans}}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_category_show', {'id': category.id}) }}">{{ 'show' |trans}}</a>
                    <a class="btn btn-secondary" href="{{ path('app_category_edit', {'id': category.id}) }}">{{ 'edit' |trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ 'no records found' |trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('app_category_new') }}">{{ 'Create new' |trans}}</a>
{% endblock %}
