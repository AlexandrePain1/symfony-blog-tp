{% extends 'base.html.twig' %}

{% block title %}Page index{% endblock %}

{% block body %}
    <h1>Page index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'Title' |trans}}</th>
                <!--<th>Image</th>-->
                <!--<th>Text</th>-->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.title }}</td>
                <!--<td>{{ page.image }}</td>-->
                <!--<td>{{ page.text }}</td>-->
                <td>
                    <a class="btn btn-primary" href="{{ path('app_page_show', {'id': page.id}) }}">{{ 'show' |trans}}</a>
                    <a class="btn btn-secondary" href="{{ path('app_page_edit', {'id': page.id}) }}">{{ 'edit' |trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'no records found' |trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('app_page_new') }}">{{ 'Create new' |trans}}</a>
{% endblock %}
