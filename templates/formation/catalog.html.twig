{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}


{% block body %}

    <h1>Formation index</h1>

    {% set number = 0 %}
    {% for formation in formations %}
    {% set number = number + 1 %}

    <div class="accordion" id="accordionExample">
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{ number }}" aria-expanded="true" aria-controls="collapse-{{ number }}">
                {{ formation.name }}
            </button>
          </h2>
          <div id="collapse-{{ number }}" class="accordion-collapse collapse {% if number < 2 %} show {% endif %}" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <strong>Prix : {{ formation.price }} €</strong> <br>
                Capacité : {{ formation.capacity }} <br>
                Date de début : {{ formation.startDateTime ? formation.startDateTime|date('Y-m-d H:i:s') : '' }}<br>
                Date de fin : {{ formation.endDateTime ? formation.endDateTime|date('Y-m-d H:i:s') : '' }}<br>
                <br>
                <a class="btn btn-primary" href="/formation/pdf/{{ formation.id }}">{{ 'Download PDF'|trans }}</a>
            </div>
          </div>
        </div>
      </div>
    {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
    {% endfor %}


